{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"args": [
				"--release",
				"--features=debug"
			],
			"env": {
				"RUST_LOG": "warn,mc_rs=debug,mc_rs_protocol=info"
			},
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "cargo",
			"command": "nextest",
			"args": [
				"run",
				"--workspace",
				"--all-targets"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "rust: cargo test"
		},
		{
			"type": "cargo",
			"command": "test",
			"args": [
				"--doc",
				"--workspace"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"label": "rust: cargo doctest"
		}
	]
}